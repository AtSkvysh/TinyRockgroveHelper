<GuiXml>
    <Controls>
		<TopLevelControl name="TRH_Marrow" resizeToFitDescendents="true" mouseEnabled="true" movable="true" clampedToScreen="true">
			<Dimensions x="100" y="100" />
			<Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" offsetX="0" offsetY="100" />
			<Controls>
				<Label name="$(parent)_Text" width="50" height="50" font="$(BOLD_FONT)|$(KB_48)|soft-shadow-thick" inheritAlpha="true" color="00FFFF" wrapMode="TRUNCATE" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="0" hidden="false">
					<Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" />
				</Label>
			</Controls>
			<OnMoveStop>
				TinyRockgroveHelper.Move()
			</OnMoveStop>
		</TopLevelControl>
    </Controls>
</GuiXml>